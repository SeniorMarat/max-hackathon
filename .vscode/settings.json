{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.formatOnSave": false,
  "editor.rulers": [120],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "xml",
    "gql",
    "graphql"
  ],
  "stylelint.validate": [
    "css",
    "scss",
    "html",
    "vue"
  ],
  "search.exclude": {
    "**/.nuxt": true,
    "**/.output": true,
    "**/node_modules": true
  }
}
