# Max Bot API Token
# Get your token from @MasterBot
BOT_TOKEN=your_bot_token_here

# GigaChat API Credentials
# Get your credentials from https://developers.sber.ru/
GIGACHAT_CREDENTIALS=your_gigachat_api_key_here

# GigaChat Scope (GIGACHAT_API_PERS for personal, GIGACHAT_API_CORP for corporate)
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# GigaChat Model (GigaChat, GigaChat-Pro, GigaChat-Max, etc.)
GIGACHAT_MODEL=GigaChat

##############################################
# LightRAG SETTINGS
##############################################

# использовать GigaChat как LLM
LIGHRAG_LLM_BACKEND=gigachat

# использовать GigaChat для эмбеддингов
LIGHRAG_EMBEDDING_BACKEND=gigachat

# база для локальных графов
LIGHRAG_WORKSPACE_BASE=./data/lightrag

##############################################
# RATE LIMITING SETTINGS
##############################################
# These settings help prevent 429 "Too Many Requests" errors

# Number of API calls allowed per minute (default: 20)
# Lower this if you're hitting rate limits frequently
GIGACHAT_CALLS_PER_MINUTE=20

# Maximum number of retry attempts for failed requests (default: 5)
GIGACHAT_MAX_RETRIES=5

# Initial delay before first retry in seconds (default: 1.0)
GIGACHAT_INITIAL_RETRY_DELAY=1.0

# Maximum delay between retries in seconds (default: 60.0)
GIGACHAT_MAX_RETRY_DELAY=60.0

# LightRAG concurrent worker counts (lower = fewer rate limits, slower processing)
# Embedding workers (default: 2, LightRAG default: 8)
LIGHTRAG_EMBEDDING_WORKERS=2

# LLM workers (default: 1, LightRAG default: 4)
LIGHTRAG_LLM_WORKERS=1